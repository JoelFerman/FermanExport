<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>

        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/shadowColor"
                android:endColor="@color/shadowColor2"
                android:angle="45"
                >
            </gradient>
        </shape>

    </item>

    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="2dp">

        <shape android:shape="rectangle">
            <solid android:color="@color/mainColorPrimary"/>
        </shape>

    </item>
</layer-list>