<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="yaxstudio.com.fermanexport.LoginScreenActivity">

    <include layout="@layout/header" android:id="@+id/include" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imgLogo1"
        android:layout_below="@+id/header"
        android:layout_toLeftOf="@+id/imgLogo2"
        android:layout_marginRight="20dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/ic_airplane_circle"
        android:tint="@color/mainColorPrimary"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imgLogo2"
        android:layout_below="@+id/header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:src="@drawable/ic_cargo_ship_circle"
        android:tint="@color/mainColorPrimary"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imgLogo3"
        android:layout_below="@+id/header"
        android:layout_toRightOf="@+id/imgLogo2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/ic_truck_circle"
        android:tint="@color/mainColorPrimary"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/imgLogoText"
        android:layout_below="@+id/header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:background="@drawable/ic_logo_text"
        android:backgroundTint="@color/mainColorPrimary"/>

    <EditText
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230dp"
        android:id="@+id/txtUsername"
        android:hint="Username"
        android:textStyle="italic"
        android:textSize="14dp"/>

    <EditText
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtUsername"
        android:layout_marginTop="30dp"
        android:id="@+id/txtPassword"
        android:hint="Password"
        android:textStyle="italic"
        android:textSize="14dp"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtPassword"
        android:layout_marginTop="40dp"
        android:id="@+id/btnLogin"
        android:textAllCaps="false"
        android:textSize="14dp"
        android:text="Login"
        android:textColor="#FFFFFF"
        android:background="@drawable/buttonshape"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnLogin"
        android:layout_marginTop="30dp"
        android:id="@+id/btnForgotPassword"
        android:text="Forgot Password?"
        android:textSize="10dp"
        android:textColor="@drawable/link_button_pressed"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnForgotPassword"
        android:layout_marginTop="45dp"
        android:id="@+id/btnRegisterNewUser"
        android:text="Not A Member? Sign Up Now."
        android:textSize="10dp"
        android:textColor="@drawable/link_button_pressed" />

</RelativeLayout>